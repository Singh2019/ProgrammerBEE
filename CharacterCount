
public class CharacterCount {
	
	public static void main(String [] args) {
		
		printCharCount("aggfsderrtysnc");
	}
	
	private static void printCharCount(String str) {
		char [] charArr = str.toCharArray();
		for (int i=0; i<charArr.length; i++) 
		{
			int count = calCount(charArr[i], charArr );
	//		deleteCharFromString(charArr[i], charArr);
			System.out.println(charArr[i] +"  Count is  = "+count);
		}
		
	}

//	private static void deleteCharFromString(char c, char[] charArr) {
//		
//		for(int i= 0; i<charArr.length; i++) {
//			if(charArr[i] == c ) {
//				charArr[i] =
//			}
//		}
//	}

	private static int calCount(char c, char[] charArr) {
		int count = 0;
		for (int i=0; i<charArr.length; i++) {
			
			if(c==charArr[i]) {
				count++;
			}
		}
		
		return count;
		
	}

}
